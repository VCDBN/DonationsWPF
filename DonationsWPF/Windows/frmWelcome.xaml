<Window x:Class="DonationsWPF.frmWelcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DonationsWPF"
        mc:Ignorable="d"
        Title="frmWelcome" Height="250" Width="200"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="5">
        <Button Content="Add Donor" Click="btnAddDonor_Click" Margin="5" Height="25" />
        <Button Content="Capture Donation" Click="btnCaptureDonation_Click" Margin="5" Height="25" />
        <Button Content="Donor Report" Click="btnDonorReport_Click" Margin="5" Height="25" />
        <Button Content="Exit" Click="btnExit_Click" Margin="5" Height="25" />
    </StackPanel>
</Window>
